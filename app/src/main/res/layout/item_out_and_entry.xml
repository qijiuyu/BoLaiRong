<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生产计划：xxx"
            android:textSize="14sp"
            android:textColor="@color/color_666666"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tv_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="部门：xxx"
            android:textSize="14sp"
            android:textColor="@color/color_666666"
            android:layout_below="@id/tv_code"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_out_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出库状态：xxx"
            android:textSize="14sp"
            android:textColor="@color/color_666666"
            android:layout_below="@id/tv_department"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_put_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入库状态：xxx"
            android:textSize="14sp"
            android:textColor="@color/color_666666"
            android:layout_below="@id/tv_out_status"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:drawableLeft="@mipmap/time"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请人：xxx"
                android:textSize="14sp"
                android:textColor="@color/color_666666"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="8dp"
                android:layout_gravity="right"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>