<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物料：xxx"
                android:textSize="14sp"
                android:textColor="@color/color_666666"/>

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7800"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tv_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WNGA0029"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="片"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量：xxx"
            android:textSize="14sp"
            android:textColor="@color/color_666666"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单价：20.0"
            android:textSize="14sp"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_monety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额：20.0"
            android:textSize="14sp"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <TextView
                android:id="@+id/tv_supplier_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="供应商名称：xxx"
                android:textSize="14sp"
                android:textColor="@color/color_666666"/>

            <TextView
                android:id="@+id/tv_supplier_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="王经理"
                android:textSize="14sp"
                android:textColor="@color/color_666666"/>

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="15099338872"
                android:textSize="14sp"
                android:textColor="@color/color_666666"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="地址：xxx"
            android:textSize="14sp"
            android:textColor="@color/color_666666"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <TextView
                android:id="@+id/tv_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款方式：xxx"
                android:textSize="14sp"
                android:textColor="@color/color_666666"/>

            <TextView
                android:id="@+id/tv_pay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="付款时间：xxx"
                android:textSize="14sp"
                android:textColor="@color/color_666666"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="备注：xxx"
            android:textSize="14sp"
            android:textColor="@color/color_666666"/>

    </LinearLayout>

</RelativeLayout>