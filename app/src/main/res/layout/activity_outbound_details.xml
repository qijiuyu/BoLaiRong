<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <include layout="@layout/head"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_making_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="制单人：xxx"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_making_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="制单时间：xxx"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销售经理：xxx"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_f9f9f9"/>

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户公司：xxx"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人：xxx"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号：xxx"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址：xxx"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_contract_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合同编号：xxx"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款方式：xxx"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_receivable_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回款日期：xxx"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_unpaid_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未付金额：xxx"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计金额：xxx"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品列表"
                android:textColor="@color/color_666666"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_f9f9f9"/>

            <com.zxdc.utils.library.view.MeasureListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.zxdc.utils.library.view.MeasureListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_f9f9f9"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总计"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_product_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金额：2000"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/tv_product_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量：10"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_toLeftOf="@id/tv_product_money"
                    android:layout_marginRight="40dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_f9f9f9"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:id="@+id/lin_audit"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_audit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核：xxx"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/tv_audit_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核时间：xxx"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/tv_audit_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核结果：xxx"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_out"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/color_f9f9f9"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/tv_outbound_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出库：无"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/tv_outbound_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出库时间：无"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出库明细"
                    android:textColor="@color/color_666666"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:background="@color/color_f5f5f5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="物料"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:gravity="center"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_666666"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="牌号"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:gravity="center"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_666666"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="规格/型号"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:gravity="center"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_666666"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text="单位"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:gravity="center"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_666666"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="批次"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:gravity="center"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_666666"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="数量"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:gravity="center"/>

                </LinearLayout>

                <com.zxdc.utils.library.view.MeasureListView
                    android:id="@+id/list_outbound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:divider="@null">
                </com.zxdc.utils.library.view.MeasureListView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/color_666666"/>

                <TextView
                    android:id="@+id/tv_logistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物流名称：xxx"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/tv_order_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物流单号：xxx"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_f9f9f9"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>